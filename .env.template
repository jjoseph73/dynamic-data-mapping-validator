### 1. Environment Template (.env.template)

# Database Configuration - Source Database
SOURCE_DB_HOST=source_db
SOURCE_DB_PORT=5432
SOURCE_DB_NAME=source_system
SOURCE_DB_USER=source_user
SOURCE_DB_PASSWORD=change_me_source_password

# Database Configuration - Target Database
TARGET_DB_HOST=target_db
TARGET_DB_PORT=5432
TARGET_DB_NAME=target_system
TARGET_DB_USER=target_user
TARGET_DB_PASSWORD=change_me_target_password

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_NAME=dynamic-data-mapping-validator
LOG_LEVEL=INFO

# AI Model Configuration
MODEL_AUTO_RETRAIN=true
MAX_TRAINING_SAMPLES=5000
MODEL_ACCURACY_THRESHOLD=0.85

# Validation Configuration
DEFAULT_ROW_COUNT_TOLERANCE=0.01
DEFAULT_NULL_VALUE_TOLERANCE=0.05
VALIDATION_TIMEOUT_SECONDS=300

# File Storage Configuration
MAPPINGS_DIR=/app/mappings
MODELS_DIR=/app/models
REPORTS_DIR=/app/reports
LOGS_DIR=/app/logs

# Security Configuration (for production)
SECRET_KEY=change_me_in_production
JWT_SECRET=change_me_jwt_secret
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring Configuration (optional)
ENABLE_METRICS=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development Configuration
DEBUG=false
RELOAD_ON_CHANGE=false
